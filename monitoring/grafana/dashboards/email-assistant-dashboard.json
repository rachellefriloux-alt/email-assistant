{
  "title": "Email Assistant Overview",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "stat",
      "title": "Backend Up",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "up{job=\"email-assistant-backend\"}",
          "legendFormat": "Backend"
        }
      ]
    },
    {
      "type": "timeSeries",
      "title": "Request Duration (p95)",
      "gridPos": { "h": 8, "w": 12, "x": 6, "y": 0 },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum by (le) (rate(http_request_duration_seconds_bucket{app=\"backend\"}[5m])))",
          "legendFormat": "p95"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      }
    },
    {
      "type": "timeSeries",
      "title": "GPT Reply Errors (rate)",
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 8 },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(email_assistant_gpt_errors_total[5m]))",
          "legendFormat": "GPT errors"
        }
      ]
    }
  ]
}
