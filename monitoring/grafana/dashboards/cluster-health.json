{
  "title": "Cluster Health",
  "schemaVersion": 16,
  "version": 1,
  "panels": [
    {
      "type": "stat",
      "title": "Available Backend Replicas",
      "targets": [
        {"expr": "kube_deployment_status_replicas_available{deployment=\"email-assistant-backend\"}"}
      ],
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
    },
    {
      "type": "stat",
      "title": "Backend Restarts",
      "targets": [
        {"expr": "sum(increase(kube_pod_container_status_restarts_total{container=\"backend\"}[1h]))"}
      ],
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0}
    },
    {
      "type": "graph",
      "title": "CPU Utilization",
      "targets": [
        {"expr": "rate(container_cpu_usage_seconds_total{container=\"backend\"}[5m])"}
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
    },
    {
      "type": "graph",
      "title": "Memory Usage",
      "targets": [
        {"expr": "container_memory_usage_bytes{container=\"backend\"}"}
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
    }
  ]
}
